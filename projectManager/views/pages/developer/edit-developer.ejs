
  <div class="my-container">
    <div class="my-content">

      <%- include('../../components/todaysDate'); %>

      <div class="heading">
        Developers
      </div>


        <!-- BEGIN Edit Project Details -->
        <div class="project-details">
          <div class="ui h3">Edit Employee Details </div>
          <form class="ui form" action="/developers/edit" method="POST">
            <input type="hidden" name="id" placeholder="Full Name" value="<%= developer.id %>">
              <div class="field">
                <label>Full Name</label>
                <input type="text" name="fullName" placeholder="Full Name" value="<%= developer.fullName %>">
              </div>
              <div class="field">
                <label>Email Address</label>
                <input type="text" name="emailAddress" placeholder="Email Address" value="<%= developer.emailAddress %>">
              </div>
              <div class="field">
                <label>Monthly Salary</label>
                <input type="number" name="monthlySalary" placeholder="Monthly Salary" value="<%= developer.monthlySalary %>">
              </div>
              <div class="field">
                <label>Overtime Rate</label>
                <input type="number" name="overtimeRate" placeholder="Overtime Rate" value="<%= developer.overtimeRate %>">
              </div>
            <label>Employment Status</label>
            <div class="ui fluid search selection dropdown">
              <input type="hidden" name="status" value="<%= developer.status %>">
              <i class="dropdown icon"></i>
              <div class="default text">Employment Status</div>
              <div class="menu">
                <div class="item" data-value="employed">Employed</div>
                <div class="item" data-value="archived">Archived</div>
              </div>
            </div>
            <button class="ui green basic button submitter" type="submit">Save Changes</button>
            <button class="ui orange basic button" >Archive Project</button>
            <button class="ui red basic button" >Delete Project</button>
          </form>
        </div>
      <!-- END Edit Project Details -->

      <!-- end of content -->
    </div>

  </div>

<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
