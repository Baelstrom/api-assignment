
  <div class="my-container">
    <div class="my-content">

      <%- include('../../components/todaysDate'); %>

      <div class="heading">
        Tasks
      </div>
        <!-- BEGIN Edit Project Details -->
        <div class="project-details">
          <div class="ui h3">Edit Task </div>
          <form class="ui form" action="/tasks/edit" method="POST">
              <div class="field">
                <label>Task Name</label>
                <input type="hidden" name="id" placeholder="Enter a task name" value="<%= task.id %>" required>
                <input type="text" name="name" placeholder="Enter a task name" value="<%= task.name %>" required>
              </div>
              <div class="field">
                <label>Description</label>
                <textarea name="description" placeholder="You can write a description here" rows="2" required ><%= task.description %></textarea>
              </div>
              <div class="field">
                <label>Work Hours</label>
                <input type="number" name="workHours" placeholder="Note down hours worked" value="<%= task.workHours %>" required>
              </div>
              <div class="field">
                <label>Overtime Hours</label>
                <input type="number" name="overtimeHours" placeholder="Clock in some overtime" value="<%= task.overtimeHours %>" required>
              </div>
            <%- include('../../components/select-status-task',{selectedStatus:task.status}); %>
            <%- include('../../components/select-project',{projects:projects,selectedProject:task.project.id}); %>
            <%- include('../../components/select-assignedTo',{developers:developers,selectedDeveloper:task.assignedTo.id}); %>

            <button class="ui green basic button submitter" type="submit">Save Changes</button>
          </form>
          <form action="/tasks/archive" method="post">
            <input type="hidden" name="id" placeholder="Project ID" value="<%= task.id %>">
            <div class="archive-butt">
              <button  type="submit" class="ui orange basic button " >Archive Task</button>
            </div>
          </form>
        </div>
      </div>
      <!-- END Edit Project Details -->




      <!-- end of task-list -->

      <!-- end of content -->

  </div>

<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
